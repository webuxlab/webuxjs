{
  "name": "@webuxlab/webuxjs-root",
  "private": true,
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4"
  },
  "scripts": {
    "test": "lerna run test",
    "lint": "lerna run lint",
    "doc": "lerna run doc",
