  },
  "lint-staged": {
    "packages/**/*.js": "eslint"
  },
  "homepage": "https://github.com/webuxlab/webuxjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/webuxlab/webuxjs.git"
  }
